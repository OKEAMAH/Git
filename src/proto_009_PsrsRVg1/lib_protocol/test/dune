(executables
 (names main saturation_fuzzing)
 (libraries tezos-base
            tezos-micheline
            tezos-protocol-environment
            alcotest-lwt
            crowbar
            tezos-009-PsrsRVg1-test-helpers
            tezos-stdlib-unix
            tezos-client-base
            tezos-protocol-009-PsrsRVg1-parameters
            tezos-test-services
            tezos-sapling
            astring
            tezos-client-009-PsrsRVg1)
 (flags (:standard -open Tezos_base__TzPervasives
                   -open Tezos_micheline
                   -open Tezos_client_009_PsrsRVg1
                   -open Tezos_protocol_009_PsrsRVg1
                   -open Tezos_protocol_environment_009_PsrsRVg1
                   -open Tezos_009_PsrsRVg1_test_helpers
                   -open Tezos_test_services
                   -open Tezos_client_009_PsrsRVg1)))

(rule
 (alias buildtest)
 (package tezos-protocol-009-PsrsRVg1-tests)
 (deps main.exe)
 (action (progn)))

(rule
 (copy %{lib:tezos-protocol-009-PsrsRVg1-parameters:test-parameters.json}
       protocol_parameters.json))

; runs only the `Quick tests
(rule
 (alias runtest_proto_009_PsrsRVg1)
 (deps (glob_files contracts/*))
 (package tezos-protocol-009-PsrsRVg1-tests)
 (action (run %{exe:main.exe} -v -q)))

; runs both `Quick and `Slow tests
(rule
 (alias runtest_slow)
 (deps (glob_files contracts/*))
 (package tezos-protocol-009-PsrsRVg1-tests)
 (action (run %{exe:main.exe} -v)))

(rule
 (alias runtest_saturation_fuzzing)
 (package tezos-protocol-009-PsrsRVg1-tests)
 (action (run %{exe:saturation_fuzzing.exe})))

(rule
 (alias runtest)
 (package tezos-protocol-009-PsrsRVg1-tests)
 (deps (alias runtest_proto_009_PsrsRVg1) (alias runtest_saturation_fuzzing))
 (action (progn)))

(rule
 (alias runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
