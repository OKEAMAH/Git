(rule
 (alias runtest)
 (package tezos-baking-012-PrwXhpab)
 (deps main.exe)
 (action (run %{exe:main.exe} -q -e)))

(rule
 (alias runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
